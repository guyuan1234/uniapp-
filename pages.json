{
	"easycom": {
		"autoscan": true,
		"tui-ui": "ThorUI文档 https://thorui.cn/doc/docs/tui-basic.html",
		"u-view": "uVieww文档 http://uviewui.com/components/intro.html",
		"l-painter": "canvas海报生成组件文档 http://liangei.gitee.io/limeui-docs/components/painter/  （此组件整合到自定义组件内   组件名称：gy-lime-painter）",
		"custom": {
			"tui-(.*)": "@/components/thorui/tui-$1/tui-$1.vue",
			"gy-(.*)": "@/components/gy-custom-ui/gy-$1/gy-$1.vue",
			"u-(.*)": "@/components/uview-ui/components/u-$1/u-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页", 
				"enablePullDownRefresh": true
			}
        }
    ],
    "tabBar": {
        "color": "#b1b7bf",
        "selectedColor": "#299bfe",
        "borderStyle": "black",
        "backgroundColor": "#ffffff",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/images/icon/index.png",
                "selectedIconPath": "static/images/icon/index1.png",
                "text": "首页"
            }
        ]
    },
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "通用模板",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#fff"
	},
	"condition": {
		"current": 1,
        "list": [ 
            {
                "name": "首页",
                "path": "pages/index/index"
                
            }
		]
	}
}
